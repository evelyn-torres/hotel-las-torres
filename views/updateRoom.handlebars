<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/styles.css"> 
    <title>Edit Room</title>
</head>
<body>
    <h1>Edit Room</h1>

    <div class="form-container">
        <form action="/admin/editRoom/{{roomId}}" method="POST" id="adminUpdateRoomForm" enctype="multipart/form-data">
            
            <!-- Room Name -->
            <label for="roomName">Room Name:</label>
            <input type="text" id="roomName" name="roomName" value="{{roomName}}" required><br>
            
            <!-- Pricing -->
            <label for="pricingPerNight">Pricing Per Night:</label>
            <input type="number" id="pricingPerNight" name="pricingPerNight" 
                   value="{{pricingPerNight}}" required><br>

            <!-- Balcony -->
            <label for="balcony">Balcony:</label>
            <select id="balcony" name="balcony" required>
                <option value="true" {{#if balcony}}selected{{/if}}>Yes</option>
                <option value="false" {{#unless balcony}}selected{{/unless}}>No</option>
            </select><br>
            
            <!-- Bed Sizes -->
            <label for="bedSizes">Bed Sizes:</label>
            <small>Format: size:count,size:count</small>
            <input type="text" id="bedSizes" name="bedSizes" 
                   value="{{bedSizes}}" 
                   placeholder="Queen:1,Twin:1" required><br>
            
            <!-- Image (optional, not yet handled in backend) -->
            <label for="roomImage">Room Image:</label>
            <input type="file" id="roomImage" name="roomImage" accept="image/*">
            <button type="submit" id="saveButton">Save</button>
        </form>
    </div>
</body>
</html>
