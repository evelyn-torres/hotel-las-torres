<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hotel Las Torres</title>
  <link rel="stylesheet" href="/public/css/styles.css">
  <script type="text/javascript">
    function googleTranslateElementInit() {
      new google.translate.TranslateElement({ pageLanguage: 'en' }, 'google_translate_element');
    }
  </script>
  <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</head>
<body>
  <!-- Google Translate Dropdown -->
  <div id="google_translate_element" class="translate-dropdown"></div>

  <!-- Taskbar -->
  <div class="taskbar">
    <!-- Logo -->
    <a href="/"><img src="/public/pics/logo.jpg" alt="Hotel Las Torres Logo" class="logo"></a>

    <!-- Common Links -->
  

    <!-- Conditional Rendering Based on User Role -->
    {{#if isAdmin}}
       <div id="google_translate_element" class="translate-dropdown"></div>
       <span class="admin-name">Welcome, {{user.employeeFirstName}} {{user.employeeLastName}}</span>
      <a href="/admin/dashboard">Dashboard</a>
      <a href="/admin/reservations">View Reservations</a>
      <a href="/logout">Logout</a>
    {{else}}
        <a href="/">Home</a>
    <a href="/about">About Us</a>
    <a href="/rooms">Rooms</a>
    {{!-- <a href="/tourism">Tourism</a> --}}
    {{!-- <a href="/contact">Reviews</a> --}}
    <a href="/login">Employee Login</a>
    {{/if}}
  </div>

  <!-- Page Header -->
  <header>
    <h1>Welcome to Hotel Las Torres</h1>
  </header>
</body>
</html>
